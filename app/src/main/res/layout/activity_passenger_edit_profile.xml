<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".PassengerEditProfileActivity">

    <ImageButton
        android:id="@+id/ibPassengerEditProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:scaleType="fitCenter" />

    <EditText
        android:id="@+id/etPassengerEditProfileFullName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ibPassengerEditProfile"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Full Name"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/etPassengerEditProfileEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassengerEditProfileFullName"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/etPassengerEditProfileContact"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassengerEditProfileEmail"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Contact Number"
        android:inputType="phone"
        />

    <EditText
        android:id="@+id/etPassengerEditProfileEmergencyContact"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassengerEditProfileContact"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Emergency Contact Number"
        android:inputType="phone"
        />

    <EditText
        android:id="@+id/etPassengerEditProfileGender"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassengerEditProfileEmergencyContact"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Gender"
        />

    <EditText
        android:id="@+id/etPassengerEditProfileAddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassengerEditProfileGender"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="Address"
        />

    <EditText
        android:id="@+id/etPassengerEditProfileSchoolAddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassengerEditProfileAddress"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="School Address"
        />

    <Button
        android:id="@+id/btnPassengerEditProfileSave"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etPassengerEditProfileSchoolAddress"
        android:text="Save"
        />


</RelativeLayout>